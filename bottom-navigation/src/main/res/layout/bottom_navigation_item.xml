<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_navigation_bar_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/tab_bottom_padding"
    android:paddingLeft="@dimen/tab_vertical_padding"
    android:paddingRight="@dimen/tab_vertical_padding"
    android:paddingTop="@dimen/tab_top_padding_inactive">

    <ImageView
        android:id="@+id/bottom_navigation_bar_icon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/bottom_navigation_bar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lines="1"
        android:textSize="@dimen/title_size_inactive" />

</FrameLayout>