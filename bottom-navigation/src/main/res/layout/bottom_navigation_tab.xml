<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_navigation_bar_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/tab_bottom_padding"
    android:paddingLeft="@dimen/tab_vertical_padding"
    android:paddingRight="@dimen/tab_vertical_padding"
    android:paddingTop="@dimen/tab_top_padding_inactive">

    <FrameLayout
        android:id="@+id/bottom_navigation_bar_icon_frame"
        android:layout_width="@dimen/bottom_navigation_bar_icon_frame_width"
        android:layout_height="@dimen/bottom_navigation_bar_icon_frame_height"
        android:layout_gravity="top|center_horizontal">

        <ImageView
            android:id="@+id/bottom_navigation_bar_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/bottom_navigation_bar_icon_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:background="@drawable/bg_red_dot"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/badge_text_size"
            android:visibility="gone"/>

    </FrameLayout>

    <TextView
        android:id="@+id/bottom_navigation_bar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lines="1"
        android:textSize="@dimen/title_size_inactive" />

</FrameLayout>