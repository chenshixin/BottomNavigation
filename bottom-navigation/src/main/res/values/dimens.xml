<?xml version="1.0" encoding="utf-8"?>
<resources>

    //Dimens for BottomNavigationBar
    <!-- Height of navigation bar -->
    <dimen name="bar_height">56dp</dimen>

    //Dimens for Tab
    <!-- Min width of tab -->
    <dimen name="tab_width_min">80dp</dimen>
    <!-- Max width of tab -->
    <dimen name="tab_width_max">168dp</dimen>
    <!--Left and right padding of tab-->
    <dimen name="tab_vertical_padding">12dp</dimen>
    <!--Bottom padding of tab-->
    <dimen name="tab_bottom_padding">10dp</dimen>
    <!--Top padding of active tab-->
    <dimen name="tab_top_padding_active">6dp</dimen>
    <!--Top padding of inactive tab-->
    <dimen name="tab_top_padding_inactive">8dp</dimen>

    //Dimens for Item
    <!-- Width and height of icon in tab -->
    <dimen name="icon_size">24dp</dimen>
    <!--Text size for active title-->
    <dimen name="title_size_active">14sp</dimen>
    <!--Text size for inactive title-->
    <dimen name="title_size_inactive">12sp</dimen>


</resources>